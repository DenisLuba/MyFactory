<ContentPage
	x:Class="MyFactory.MauiClient.Pages.Finance.Payroll.PayrollRuleDetailsPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Finance.Payroll"
	Title="Правило расчёта зарплаты"
	x:DataType="view_model:PayrollRuleDetailsPageViewModel">
	<ScrollView>
		<VerticalStackLayout Padding="16" Spacing="12">
			<Label
				FontAttributes="Bold"
				FontSize="18"
				Text="Правило расчёта зарплаты" />

			<Grid
				ColumnDefinitions="Auto,*"
				ColumnSpacing="8"
				RowDefinitions="Auto,Auto,Auto"
				RowSpacing="8">
				<Label FontAttributes="Bold" Text="Дата начала:" />
				<DatePicker Grid.Column="1" Date="{Binding EffectiveFrom}" />
				<Label
					Grid.Row="1"
					FontAttributes="Bold"
					Text="Премия (%):" />
				<Entry
					Grid.Row="1"
					Grid.Column="1"
					Keyboard="Numeric"
					Text="{Binding PremiumPercent}" />
				<Label
					Grid.Row="2"
					FontAttributes="Bold"
					Text="Описание:" />
				<Entry
					Grid.Row="2"
					Grid.Column="1"
					Text="{Binding Description}" />
			</Grid>

			<HorizontalStackLayout Spacing="12">
				<Button Command="{Binding SaveCommand}" Text="Сохранить" />
				<Button Command="{Binding CancelCommand}" Text="Отмена" />
			</HorizontalStackLayout>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>

