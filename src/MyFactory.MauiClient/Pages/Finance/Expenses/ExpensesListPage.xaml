<ContentPage
	x:Class="MyFactory.MauiClient.Pages.Finance.Expenses.ExpensesListPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Finance.Expenses"
	Title="Расходы"
	x:DataType="view_model:ExpensesListPageViewModel">
	<ScrollView>
		<VerticalStackLayout Padding="16" Spacing="12">
			<Grid
				ColumnDefinitions="Auto,*,Auto"
				ColumnSpacing="8"
				RowDefinitions="Auto,Auto"
				RowSpacing="8">
				<Label Text="Период:" VerticalTextAlignment="Center" />
				<Picker
					Grid.Column="1"
					ItemsSource="{Binding Periods}"
					SelectedItem="{Binding SelectedPeriod}" />
				<Button
					Grid.Column="2"
					Command="{Binding AddCommand}"
					Text="Добавить" />
				<Label
					Grid.Row="1"
					Text="Тип:"
					VerticalTextAlignment="Center" />
				<Picker
					Grid.Row="1"
					Grid.Column="1"
					ItemDisplayBinding="{Binding Name}"
					ItemsSource="{Binding ExpenseTypes}"
					SelectedItem="{Binding SelectedExpenseType}" />
			</Grid>

			<Grid
				Padding="0,4"
				ColumnDefinitions="Auto,Auto,*,Auto,Auto"
				ColumnSpacing="8">
				<Label FontAttributes="Bold" Text="Дата" />
				<Label
					Grid.Column="1"
					FontAttributes="Bold"
					Text="Тип" />
				<Label
					Grid.Column="2"
					FontAttributes="Bold"
					Text="Описание" />
				<Label
					Grid.Column="3"
					FontAttributes="Bold"
					Text="Сумма" />
				<Label
					Grid.Column="4"
					FontAttributes="Bold"
					Text="Автор" />
			</Grid>

			<CollectionView
				x:Name="ExpensesCollection"
				ItemsSource="{Binding Expenses}"
				SelectionMode="None">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<SwipeView>
							<SwipeView.RightItems>
								<SwipeItems Mode="Reveal">
									<SwipeItem
										BackgroundColor="LightGray"
										Command="{Binding BindingContext.EditCommand, Source={x:Reference Name=ExpensesCollection}}"
										CommandParameter="{Binding .}"
										Text="Редактировать" />
									<SwipeItem
										BackgroundColor="Tomato"
										Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Name=ExpensesCollection}}"
										CommandParameter="{Binding .}"
										Text="Удалить" />
								</SwipeItems>
							</SwipeView.RightItems>
							<Grid
								Padding="0,8"
								ColumnDefinitions="Auto,Auto,*,Auto,Auto"
								ColumnSpacing="8">
								<Label Text="{Binding ExpenseDate}" />
								<Label Grid.Column="1" Text="{Binding ExpenseTypeName}" />
								<Label Grid.Column="2" Text="{Binding Description}" />
								<Label
									Grid.Column="3"
									HorizontalTextAlignment="End"
									Text="{Binding Amount}" />
								<Label Grid.Column="4" Text="{Binding CreatedBy}" />
							</Grid>
						</SwipeView>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

			<Grid
				Padding="0,6"
				ColumnDefinitions="Auto,Auto,*,Auto,Auto"
				ColumnSpacing="8">
				<Label FontAttributes="Bold" Text="Итого за период:" />
				<Label
					Grid.Column="3"
					FontAttributes="Bold"
					HorizontalTextAlignment="End"
					Text="{Binding TotalAmount}" />
			</Grid>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>

