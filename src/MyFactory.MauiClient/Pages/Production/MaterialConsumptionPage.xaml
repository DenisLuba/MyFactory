<ContentPage
	x:Class="MyFactory.MauiClient.Pages.Production.MaterialConsumptionPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Production"
	Title="Списание материалов"
	x:DataType="view_model:MaterialConsumptionPageViewModel">
	<ScrollView>
		<VerticalStackLayout Padding="16" Spacing="12">
			<Label
				FontAttributes="Bold"
				FontSize="18"
				Text="Списание материалов" />
			<Label
				FontAttributes="Bold"
				FontSize="16"
				Text="{Binding MaterialName}" />
			<Grid
				ColumnDefinitions="Auto,*"
				ColumnSpacing="8"
				RowDefinitions="Auto">
				<Label FontAttributes="Bold" Text="Цех:" />
				<Label Grid.Column="1" Text="{Binding DepartmentName}" />
			</Grid>

			<Grid
				ColumnDefinitions="*,Auto"
				ColumnSpacing="8"
				RowDefinitions="Auto,Auto,Auto"
				RowSpacing="6">
				<Label FontAttributes="Bold" Text="Необходимо:" />
				<Label
					Grid.Column="1"
					HorizontalTextAlignment="End"
					Text="{Binding Required}" />
				<Label
					Grid.Row="1"
					FontAttributes="Bold"
					Text="Доступно на складах:" />
				<Label
					Grid.Row="1"
					Grid.Column="1"
					HorizontalTextAlignment="End"
					Text="{Binding Available}" />
				<Label
					Grid.Row="2"
					FontAttributes="Bold"
					Text="Не хватает:" />
				<Label
					Grid.Row="2"
					Grid.Column="1"
					HorizontalTextAlignment="End"
					Text="{Binding Missing}" />
			</Grid>

			<Grid
				Padding="0,4"
				ColumnDefinitions="*,Auto,Auto,Auto"
				ColumnSpacing="8">
				<Label FontAttributes="Bold" Text="Склад" />
				<Label
					Grid.Column="1"
					FontAttributes="Bold"
					Text="Есть" />
				<Label
					Grid.Column="2"
					FontAttributes="Bold"
					Text="Списать" />
				<Label
					Grid.Column="3"
					FontAttributes="Bold"
					Text="Останется" />
			</Grid>

			<CollectionView
				x:Name="WarehousesCollection"
				ItemsSource="{Binding Warehouses}"
				SelectionMode="None">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<Grid
							Padding="0,6"
							ColumnDefinitions="*,Auto,Auto,Auto"
							ColumnSpacing="8">
							<Label Text="{Binding WarehouseName}" />
							<Label
								Grid.Column="1"
								HorizontalTextAlignment="End"
								Text="{Binding Available}" />
							<Entry
								Grid.Column="2"
								Keyboard="Numeric"
								Text="{Binding ToConsume}"
								WidthRequest="80" />
							<Entry
								Grid.Column="3"
								Keyboard="Numeric"
								Text="{Binding Remaining}"
								WidthRequest="80" />
						</Grid>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>

			<Label
				IsVisible="{Binding HasShortage}"
				Text="Недостаточно материала"
				TextColor="Red" />

			<HorizontalStackLayout Spacing="12">
				<Button Command="{Binding CancelCommand}" Text="Отмена" />
				<Button Command="{Binding IssueCommand}" Text="Списать материалы" />
			</HorizontalStackLayout>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>

