<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyFactory.MauiClient.Pages.Specifications.SpecificationCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Specifications"
    x:DataType="view_model:SpecificationCardPageViewModel"
    Title="{Binding Title}">

    <ContentPage.Resources>
        <Style TargetType="Border" x:Key="SectionBorderStyle">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#E5E7EB, Dark=#374151}" />
            <Setter Property="Background" Value="{AppThemeBinding Light=#FFFFFF, Dark=#111827}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,16" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <ActivityIndicator HorizontalOptions="Center" VerticalOptions="Center" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">
                <Border Style="{StaticResource SectionBorderStyle}">
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="12">
                        <Grid Grid.Row="0" Grid.ColumnSpan="2" RowDefinitions="Auto,Auto" RowSpacing="4">
                            <Label FontAttributes="Bold" Text="Основные данные" />
                            <Label FontSize="13" TextColor="{DynamicResource Gray500}" Text="Редактируйте поля и сохраните изменения" />
                        </Grid>

                        <VerticalStackLayout Grid.Row="1">
                            <Label Text="SKU" FontSize="12" TextColor="{DynamicResource Gray500}" />
                            <Entry Text="{Binding Sku}" IsEnabled="{Binding IsEditing}" Placeholder="SKU" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                            <Label Text="Наименование" FontSize="12" TextColor="{DynamicResource Gray500}" />
                            <Entry Text="{Binding Name}" IsEnabled="{Binding IsEditing}" Placeholder="Название" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.ColumnSpan="2" Grid.Row="2">
                            <Label Text="План, шт/час" FontSize="12" TextColor="{DynamicResource Gray500}" />
                            <Entry Text="{Binding PlanPerHourText}" IsEnabled="{Binding IsEditing}" Placeholder="Например, 15" Keyboard="Numeric" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.ColumnSpan="2" Grid.Row="3">
                            <Label Text="Описание" FontSize="12" TextColor="{DynamicResource Gray500}" />
                            <Editor Text="{Binding Description}" IsEnabled="{Binding IsEditing}" AutoSize="TextChanges" MinimumHeightRequest="80" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <Border Style="{StaticResource SectionBorderStyle}">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="16" RowSpacing="8">
                        <Label FontAttributes="Bold" Text="Служебная информация" />
                        <Label Grid.Column="1" Text="{Binding Status, StringFormat='Статус: {0}'}" HorizontalTextAlignment="End" />
                        <Label Grid.Row="1" Text="{Binding ImagesCount, StringFormat='Изображений: {0}'}" />
                        <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="12" HorizontalOptions="End">
                            <Button Text="Редактировать" Command="{Binding StartEditingCommand}" IsEnabled="{Binding IsEditing, Converter={StaticResource InvertedBoolConverter}}" />
                            <Button Text="Сохранить" Command="{Binding SaveCommand}" IsEnabled="{Binding IsEditing}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <Border Style="{StaticResource SectionBorderStyle}">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                        <Label FontAttributes="Bold" Text="Действия" />
                        <ActivityIndicator Grid.Column="1" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                        <Grid Grid.Row="1" Grid.ColumnSpan="2" ColumnDefinitions="*,*" ColumnSpacing="12">
                            <Button Text="BOM" Command="{Binding OpenBomCommand}" />
                            <Button Grid.Column="1" Text="Операции" Command="{Binding OpenOperationsCommand}" />
                            <Button Grid.ColumnSpan="2" Grid.Row="1" Text="Себестоимость" Command="{Binding OpenCostCommand}" />
                        </Grid>
                    </Grid>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
