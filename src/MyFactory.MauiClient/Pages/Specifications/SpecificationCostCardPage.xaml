<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyFactory.MauiClient.Pages.Specifications.SpecificationCostCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Specifications"
    x:DataType="view_model:SpecificationCostCardPageViewModel"
    Title="{Binding Title}">

    <ContentPage.Resources>
        <Style TargetType="Border" x:Key="CostBorderStyle">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#E5E7EB, Dark=#374151}" />
            <Setter Property="Background" Value="{AppThemeBinding Light=#FFFFFF, Dark=#0F172A}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,16" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <Border Style="{StaticResource CostBorderStyle}">
                <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto" RowSpacing="12" ColumnSpacing="12">
                    <Label Grid.ColumnSpan="2" FontAttributes="Bold" Text="Параметры расчёта" />

                    <VerticalStackLayout>
                        <Label Text="Спецификация" FontSize="12" TextColor="{DynamicResource Gray500}" />
                        <Picker
                            Title="Выберите спецификацию"
                            ItemsSource="{Binding Specifications}"
                            ItemDisplayBinding="{Binding Name}"
                            SelectedItem="{Binding SelectedSpecification}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Дата расчёта" FontSize="12" TextColor="{DynamicResource Gray500}" />
                        <DatePicker Date="{Binding AsOfDate}" />
                    </VerticalStackLayout>

                    <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="12" HorizontalOptions="End">
                        <Button Text="Обновить список" Command="{Binding LoadSpecificationsCommand}" />
                        <Button Text="Рассчитать" Command="{Binding RefreshCostCommand}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding SelectedSpecification}" Value="{x:Null}">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <Border Style="{StaticResource CostBorderStyle}">
                <VerticalStackLayout Spacing="8">
                    <Label FontAttributes="Bold" Text="Структура себестоимости" />
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8">
                        <Label Text="Материалы" />
                        <Label Grid.Column="1" Text="{Binding MaterialsCost, StringFormat='{0:N2} ₽'}" HorizontalTextAlignment="End" />

                        <Label Grid.Row="1" Text="Операции" />
                        <Label Grid.Column="1" Grid.Row="1" Text="{Binding OperationsCost, StringFormat='{0:N2} ₽'}" HorizontalTextAlignment="End" />

                        <Label Grid.Row="2" Text="Цеховые расходы" />
                        <Label Grid.Column="1" Grid.Row="2" Text="{Binding WorkshopExpenses, StringFormat='{0:N2} ₽'}" HorizontalTextAlignment="End" />

                        <Label Grid.Row="3" FontAttributes="Bold" Text="Итого" />
                        <Label Grid.Column="1" Grid.Row="3" FontAttributes="Bold" Text="{Binding TotalCost, StringFormat='{0:N2} ₽'}" HorizontalTextAlignment="End" />
                    </Grid>

                    <Label Text="Данные получены" TextColor="{DynamicResource Gray500}" IsVisible="{Binding HasCost}" />
                    <Label Text="Выберите спецификацию для расчёта" TextColor="{DynamicResource Gray500}" IsVisible="{Binding HasCost, Converter={StaticResource InvertedBoolConverter}}" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
