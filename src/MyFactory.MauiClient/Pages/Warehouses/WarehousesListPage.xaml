<ContentPage
	x:Class="MyFactory.MauiClient.Pages.Warehouses.WarehousesListPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:conv="clr-namespace:MyFactory.MauiClient.Converters"
	xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Warehouses"
	Title="Склады"
	x:DataType="view_model:WarehousesListPageViewModel">
	<ContentPage.Resources>
		<conv:BooleanToColorConverter x:Key="BoolToColorConverter" />
	</ContentPage.Resources>

	<Grid
		Padding="16"
		RowDefinitions="Auto,Auto,*"
		RowSpacing="12">

		<Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
			<Label
				FontAttributes="Bold"
				FontSize="18"
				Text="Склады" />
			<Button
				Grid.Column="1"
				Command="{Binding AddCommand}"
				Text="Добавить" />
		</Grid>

		<ActivityIndicator
			Grid.Row="2"
			IsRunning="{Binding IsBusy}"
			IsVisible="{Binding IsBusy}" />

		<Grid
			Grid.Row="1"
			Padding="16"
			ColumnDefinitions="3.8*,3*,1.5*,1.5*,0.2*"
			ColumnSpacing="8">
			<Label FontAttributes="Bold" Text="Название" />
			<Label
				Grid.Column="1"
				FontAttributes="Bold"
				HorizontalTextAlignment="End"
				Text="Тип" />
			<Label
				Grid.Column="2"
				FontAttributes="Bold"
				HorizontalTextAlignment="End"
				Text="Статус" />
		</Grid>

		<Border Grid.Row="2">
			<CollectionView
				x:Name="WarehousesCollection"
				ItemsSource="{Binding Warehouses}"
				SelectionMode="None">
				<CollectionView.ItemTemplate>
					<DataTemplate x:DataType="view_model:WarehousesListPageViewModel+WarehouseItemViewModel">
						<SwipeView>
							<SwipeView.RightItems>
								<SwipeItems Mode="Reveal">
									<SwipeItem
										BackgroundColor="LightGray"
										Command="{Binding BindingContext.EditCommand, Source={x:Reference Name=WarehousesCollection}}"
										CommandParameter="{Binding .}"
										Text="Редактировать" />
									<SwipeItem
										BackgroundColor="Tomato"
										Command="{Binding BindingContext.DeleteCommand, Source={x:Reference Name=WarehousesCollection}}"
										CommandParameter="{Binding .}"
										Text="Удалить" />
								</SwipeItems>
							</SwipeView.RightItems>
							<Grid
								Padding="0,8"
								ColumnDefinitions="3.8*,3*,1.5*,1.5*,0.2*"
								ColumnSpacing="8">
								<Grid.GestureRecognizers>
									<TapGestureRecognizer Command="{Binding BindingContext.OpenStockCommand, Source={x:Reference Name=WarehousesCollection}}" CommandParameter="{Binding .}" />
								</Grid.GestureRecognizers>
								<Label Text="{Binding Name}" TextColor="{Binding IsActive, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Black;Gray'}" />
								<Label
									Grid.Column="1"
									HorizontalTextAlignment="End"
								Text="{Binding TypeDisplay}"
									TextColor="{Binding IsActive, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Black;Gray'}" />
								<Label
									Grid.Column="2"
									HorizontalTextAlignment="End"
									Text="{Binding Status}"
									TextColor="{Binding IsActive, Converter={StaticResource BoolToColorConverter}, ConverterParameter='Black;Gray'}" />
								<Label
									Grid.Column="3"
									FontAttributes="Italic"
									HorizontalTextAlignment="End"
									IsEnabled="{Binding IsActive}"
									IsVisible="{Binding IsActive}"
									Text="Деактивировать"
									TextColor="Tomato"
									VerticalTextAlignment="Center">
									<Label.GestureRecognizers>
										<TapGestureRecognizer Command="{Binding BindingContext.DeactivateCommand, Source={x:Reference Name=WarehousesCollection}}" CommandParameter="{Binding .}" />
									</Label.GestureRecognizers>
								</Label>
								<Label
									Grid.Column="3"
									FontAttributes="Italic"
									HorizontalTextAlignment="End"
									IsEnabled="{Binding IsInactive}"
									IsVisible="{Binding IsInactive}"
									Text="Активировать"
									TextColor="Green"
									VerticalTextAlignment="Center">
									<Label.GestureRecognizers>
										<TapGestureRecognizer Command="{Binding BindingContext.ActivateCommand, Source={x:Reference Name=WarehousesCollection}}" CommandParameter="{Binding .}" />
									</Label.GestureRecognizers>
								</Label>
							</Grid>
						</SwipeView>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</Border>
	</Grid>
</ContentPage>

