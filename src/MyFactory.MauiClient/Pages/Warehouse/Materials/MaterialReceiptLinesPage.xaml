<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Name="LinesPage"
    x:Class="MyFactory.MauiClient.Pages.Warehouse.Materials.MaterialReceiptLinesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ui="clr-namespace:MyFactory.MauiClient.UIModels.Warehouse"
    xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Warehouse.Materials"
    x:DataType="view_model:MaterialReceiptLinesPageViewModel"
    Title="{Binding Title}">

    <ContentPage.Resources>
        <Style TargetType="Border" x:Key="CardBorderStyle">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#E5E7EB, Dark=#374151}" />
            <Setter Property="Background" Value="{AppThemeBinding Light=#FFFFFF, Dark=#111827}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

        <VerticalStackLayout Padding="16" Spacing="16">
            <Border Style="{StaticResource CardBorderStyle}">
                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                    <Label FontAttributes="Bold" Text="{Binding DocumentNumber}" />
                    <Label Grid.Column="1" HorizontalTextAlignment="End" Text="{Binding ReceiptStatus}" />
                    <Label Grid.Row="1" Text="{Binding TotalAmountDisplay}" FontAttributes="Bold" />
                    <Label Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="End" Text="{Binding Lines.Count, StringFormat='Строк: {0}'}" />
                </Grid>
            </Border>

            <Border Style="{StaticResource CardBorderStyle}">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <Label Text="Управление строками" />
                    <Button
                        Grid.Column="1"
                        Text="Добавить"
                        Command="{Binding AddLineCommand}"
                        IsEnabled="{Binding CanEditLines}" />
                </Grid>
            </Border>

            <RefreshView Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy}">
                <CollectionView ItemsSource="{Binding Lines}">
                    <CollectionView.EmptyView>
                        <Label
                            HorizontalOptions="Center"
                            Padding="24"
                            Text="Строки не найдены"
                            TextColor="{DynamicResource Gray500}"
                            VerticalOptions="Center" />
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="ui:MaterialReceiptLineItem">
                            <Border Style="{StaticResource CardBorderStyle}">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="12" RowSpacing="6">
                                    <Label FontAttributes="Bold" Text="{Binding Material}" />
                                    <Label Grid.Column="1" HorizontalTextAlignment="End" Text="{Binding Quantity, StringFormat='{0:N2}'}" />

                                    <Label Grid.Row="1" Text="{Binding Unit, StringFormat='Ед.: {0}'}" TextColor="{DynamicResource Gray500}" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        HorizontalTextAlignment="End"
                                        Text="{Binding Price, StringFormat='Цена: {0:N2} ₽'}"
                                        TextColor="{DynamicResource Gray500}" />

                                    <Grid Grid.Row="2" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                                        <Label FontAttributes="Bold" Text="{Binding TotalAmount, StringFormat='Сумма: {0:N2} ₽'}" />
                                        <Button
                                            Grid.Column="1"
                                            Text="Изменить"
                                            Command="{Binding Source={x:Reference LinesPage}, Path=BindingContext.EditLineCommand}"
                                            CommandParameter="{Binding .}"
                                            IsEnabled="{Binding Source={x:Reference LinesPage}, Path=BindingContext.CanEditLines}" />
                                        <Button
                                            Grid.Column="2"
                                            Text="Удалить"
                                            Command="{Binding Source={x:Reference LinesPage}, Path=BindingContext.DeleteLineCommand}"
                                            CommandParameter="{Binding .}"
                                            IsEnabled="{Binding Source={x:Reference LinesPage}, Path=BindingContext.CanEditLines}" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
