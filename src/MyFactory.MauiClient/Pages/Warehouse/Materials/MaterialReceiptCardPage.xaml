<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyFactory.MauiClient.Pages.Warehouse.Materials.MaterialReceiptCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Warehouse.Materials"
    x:DataType="view_model:MaterialReceiptCardPageViewModel"
    Title="{Binding Title}">

    <ContentPage.Resources>
        <Style TargetType="Border" x:Key="SectionBorderStyle">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#E5E7EB, Dark=#374151}" />
            <Setter Property="Background" Value="{AppThemeBinding Light=#FFFFFF, Dark=#111827}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,16" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <ActivityIndicator
            HorizontalOptions="Center"
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            VerticalOptions="Center" />

        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">
                <Border Style="{StaticResource SectionBorderStyle}">
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="16" RowSpacing="12">
                        <Label Grid.ColumnSpan="2" FontAttributes="Bold" FontSize="16" Text="Документ" />

                        <VerticalStackLayout>
                            <Label FontSize="12" Text="Номер" TextColor="{DynamicResource Gray500}" />
                            <Entry Text="{Binding DocumentNumber}" Placeholder="RC-001" IsEnabled="{Binding IsEditable}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Label FontSize="12" Text="Дата" TextColor="{DynamicResource Gray500}" />
                            <DatePicker Date="{Binding DocumentDate}" IsEnabled="{Binding IsEditable}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="2">
                            <Label FontSize="12" Text="Поставщик" TextColor="{DynamicResource Gray500}" />
                            <Entry Text="{Binding SupplierName}" Placeholder="Компания" IsEnabled="{Binding IsEditable}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="2" Grid.Column="1">
                            <Label FontSize="12" Text="Склад" TextColor="{DynamicResource Gray500}" />
                            <Entry Text="{Binding WarehouseName}" Placeholder="Основной склад" IsEnabled="{Binding IsEditable}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="3" Grid.ColumnSpan="2">
                            <Label FontSize="12" Text="Комментарий" TextColor="{DynamicResource Gray500}" />
                            <Editor
                                AutoSize="TextChanges"
                                IsEnabled="{Binding IsEditable}"
                                MinimumHeightRequest="80"
                                Text="{Binding Comment}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <Border Style="{StaticResource SectionBorderStyle}">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="8">
                        <Label FontAttributes="Bold" Text="Итоги" />
                        <Label Grid.Column="1" HorizontalTextAlignment="End" Text="{Binding StatusDisplay}" />

                        <VerticalStackLayout Grid.Row="1">
                            <Label FontSize="12" Text="Сумма" TextColor="{DynamicResource Gray500}" />
                            <Entry Text="{Binding TotalAmount}" IsEnabled="{Binding IsEditable}" Keyboard="Numeric" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                            <Label FontSize="12" Text="Статус" TextColor="{DynamicResource Gray500}" />
                            <Label FontAttributes="Bold" Text="{Binding StatusDisplay}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <Border Style="{StaticResource SectionBorderStyle}">
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                        <Label FontAttributes="Bold" Text="Действия" />
                        <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="12">
                            <Button
                                Text="Сохранить"
                                Command="{Binding SaveCommand}"
                                IsEnabled="{Binding IsEditable}" />
                            <Button
                                Text="Провести"
                                Command="{Binding PostCommand}"
                                IsEnabled="{Binding CanPostDocument}" />
                            <Button
                                Text="Позиции"
                                Command="{Binding OpenLinesCommand}"
                                IsEnabled="{Binding IsExisting}" />
                        </HorizontalStackLayout>
                    </Grid>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
