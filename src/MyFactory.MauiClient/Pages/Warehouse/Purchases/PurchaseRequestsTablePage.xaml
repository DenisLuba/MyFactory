<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyFactory.MauiClient.Pages.Warehouse.Purchases.PurchaseRequestsTablePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ui="clr-namespace:MyFactory.MauiClient.UIModels.Warehouse"
    xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Warehouse.Purchases"
    x:DataType="view_model:PurchaseRequestsTablePageViewModel"
    Title="Ведомости на закупку">

    <ContentPage.Resources>
        <Style TargetType="Border" x:Key="CardBorderStyle">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#E5E7EB, Dark=#374151}" />
            <Setter Property="Background" Value="{AppThemeBinding Light=#FFFFFF, Dark=#111827}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid Padding="16" RowDefinitions="Auto,Auto,*" RowSpacing="12">
        <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
            <Entry Placeholder="Поиск по номеру, позиции или статусу" Text="{Binding SearchText}" />
            <Button
                Grid.Column="1"
                Text="Новая"
                Command="{Binding CreateRequestCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
            <Button
                Grid.Column="2"
                Text="Обновить"
                Command="{Binding LoadCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
        </Grid>

        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" ColumnSpacing="12">
            <Label
                VerticalOptions="Center"
                Text="{Binding Requests.Count, StringFormat='Всего документов: {0}'}" />
            <ActivityIndicator Grid.Column="1" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
        </Grid>

        <RefreshView Grid.Row="2" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsBusy}">
            <CollectionView
                ItemsSource="{Binding Requests}"
                SelectionMode="Single"
                SelectionChanged="OnRequestSelectionChanged">
                <CollectionView.EmptyView>
                    <Label
                        HorizontalOptions="Center"
                        Padding="24"
                        Text="Ведомости не найдены"
                        TextColor="{DynamicResource Gray500}"
                        VerticalOptions="Center" />
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="ui:PurchaseRequestListItem">
                        <Border Style="{StaticResource CardBorderStyle}">
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="6">
                                <Label FontAttributes="Bold" FontSize="16" Text="{Binding DocumentNumber}" />
                                <Label Grid.Column="1" HorizontalTextAlignment="End" Text="{Binding StatusDisplay}" />

                                <Label Grid.Row="1" Text="{Binding ItemsSummary}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    HorizontalTextAlignment="End"
                                    Text="{Binding TotalAmount, StringFormat='Сумма: {0:N2} ₽'}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
