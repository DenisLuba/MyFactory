<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyFactory.MauiClient.Pages.Reference.Operations.OperationCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Reference.Operations"
    x:DataType="view_model:OperationCardPageViewModel"
    Title="{Binding Title}">

    <ContentPage.Resources>
        <Style TargetType="Border" x:Key="FormBorderStyle">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#E5E7EB, Dark=#374151}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="Background" Value="{AppThemeBinding Light=#FFFFFF, Dark=#1F2937}" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="16">
            <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                <Label FontAttributes="Bold" FontSize="22" Text="{Binding Title}" />
                <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                <Button
                    Command="{Binding LoadCommand}"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}"
                    Text="Обновить" />
            </HorizontalStackLayout>

            <Border Style="{StaticResource FormBorderStyle}">
                <Grid RowSpacing="16">
                    <VerticalStackLayout>
                        <Label Text="Код" FontSize="12" TextColor="{DynamicResource Gray500}" />
                        <Entry
                            Text="{Binding Code}"
                            IsReadOnly="{Binding IsEditing, Converter={StaticResource InvertedBoolConverter}}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Наименование" FontSize="12" TextColor="{DynamicResource Gray500}" />
                        <Entry
                            Text="{Binding Name}"
                            IsReadOnly="{Binding IsEditing, Converter={StaticResource InvertedBoolConverter}}" />
                    </VerticalStackLayout>

                    <VerticalStackLayout>
                        <Label Text="Тип операции" FontSize="12" TextColor="{DynamicResource Gray500}" />
                        <Entry
                            Text="{Binding OperationType}"
                            IsReadOnly="{Binding IsEditing, Converter={StaticResource InvertedBoolConverter}}" />
                    </VerticalStackLayout>

                    <Grid ColumnSpacing="16" ColumnDefinitions="*,*">
                        <VerticalStackLayout>
                            <Label Text="Время (мин)" FontSize="12" TextColor="{DynamicResource Gray500}" />
                            <Entry
                                Keyboard="Numeric"
                                Text="{Binding MinutesText}"
                                IsReadOnly="{Binding IsEditing, Converter={StaticResource InvertedBoolConverter}}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Стоимость" FontSize="12" TextColor="{DynamicResource Gray500}" />
                            <Entry
                                Keyboard="Numeric"
                                Text="{Binding CostText}"
                                IsReadOnly="{Binding IsEditing, Converter={StaticResource InvertedBoolConverter}}" />
                        </VerticalStackLayout>
                    </Grid>
                </Grid>
            </Border>

            <Border Style="{StaticResource FormBorderStyle}">
                <VerticalStackLayout Spacing="12">
                    <Button
                        Command="{Binding StartEditingCommand}"
                        IsVisible="{Binding IsEditing, Converter={StaticResource InvertedBoolConverter}}"
                        Text="Редактировать" />
                    <Button
                        Command="{Binding SaveCommand}"
                        IsVisible="{Binding IsEditing}"
                        Text="Сохранить" />
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
