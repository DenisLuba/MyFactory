<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyFactory.MauiClient.Pages.Reference.Warehouses.WarehouseCardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:MyFactory.MauiClient.Converters"
    xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Reference.Warehouses"
    x:DataType="view_model:WarehouseCardPageViewModel"
    Title="Карточка склада">

    <ContentPage.Resources>
        <Color x:Key="SecondaryTextColor">#6B7280</Color>
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Stroke" Value="{AppThemeBinding Light=#E5E7EB, Dark=#374151}" />
            <Setter Property="Background" Value="{AppThemeBinding Light=#FFFFFF, Dark=#1F2937}" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="12" />
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="16" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
    </ContentPage.Resources>

    <RefreshView Command="{Binding LoadWarehouseCommand}" IsRefreshing="{Binding IsBusy}">
        <ScrollView>
            <VerticalStackLayout Padding="16" Spacing="16">
                <HorizontalStackLayout Spacing="12" VerticalOptions="Center">
                    <Label FontAttributes="Bold" FontSize="20" Text="Склад" />
                    <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
                </HorizontalStackLayout>

                <Border Style="{StaticResource SectionBorderStyle}">
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="12">
                        <VerticalStackLayout>
                            <Label Text="Код" FontAttributes="Bold" />
                            <Label Text="{Binding Code}" TextColor="{StaticResource SecondaryTextColor}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="1">
                            <Label Text="Название" FontAttributes="Bold" />
                            <Entry Text="{Binding Name}" Placeholder="Введите название" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="2">
                            <Label Text="Тип" FontAttributes="Bold" />
                            <Picker
                                ItemsSource="{Binding WarehouseTypes}"
                                ItemDisplayBinding="{Binding .}"
                                SelectedItem="{Binding SelectedType}" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="3">
                            <Label Text="Локация" FontAttributes="Bold" />
                            <Entry Text="{Binding Location}" Placeholder="Адрес или расположение" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Row="4">
                            <Label Text="Статус" FontAttributes="Bold" />
                            <Picker
                                ItemsSource="{Binding Statuses}"
                                ItemDisplayBinding="{Binding .}"
                                SelectedItem="{Binding SelectedStatus}" />
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <Button
                    Text="Сохранить"
                    Command="{Binding SaveWarehouseCommand}"
                    IsEnabled="{Binding IsSaving, Converter={StaticResource InvertedBoolConverter}}" />

                <Button
                    Text="Удалить"
                    Command="{Binding DeleteWarehouseCommand}"
                    IsEnabled="{Binding IsDeleting, Converter={StaticResource InvertedBoolConverter}}"
                    TextColor="Red" />
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
