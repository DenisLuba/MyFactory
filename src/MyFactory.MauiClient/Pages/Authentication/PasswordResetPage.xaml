<ContentPage
	x:Class="MyFactory.MauiClient.Pages.Authentication.PasswordResetPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Authentication"
	Title="—брос парол€"
	x:DataType="view_model:PasswordResetPageViewModel">
	<ScrollView>
		<VerticalStackLayout
			Padding="24"
			Spacing="16"
			VerticalOptions="CenterAndExpand">
			<Label
				FontAttributes="Bold"
				FontSize="24"
				HorizontalTextAlignment="Center"
				Text="Reset password" />
			<Entry
				Keyboard="Email"
				Placeholder="Email"
				Text="{Binding Email}" />
			<Button Command="{Binding ResetPasswordCommand}" Text="Send reset link" />
			<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
			<Label HorizontalTextAlignment="Center" Text="{Binding Message}" />
			<Button Command="{Binding NavigateBackCommand}" Text="Back to login" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>

