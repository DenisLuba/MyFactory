<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
	x:Class="MyFactory.MauiClient.Pages.Authentication.RegisterPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Authentication"
	Title="Регистрация"
	x:DataType="view_model:RegisterPageViewModel"
	NavigationPage.HasBackButton="False">
	<ScrollView>
		<VerticalStackLayout
			Padding="24"
			Spacing="16"
			VerticalOptions="Center">
			<Label
				FontAttributes="Bold"
				FontSize="24"
				HorizontalTextAlignment="Center"
				Text="Регистрация" />
			<Entry
				Placeholder="Логин"
				ReturnType="Next"
				Text="{Binding Username}" />
			<Entry
				IsPassword="True"
				Placeholder="Пароль"
				ReturnType="Next"
				Text="{Binding Password}" />
			<Entry
				IsPassword="True"
				Placeholder="Повторите пароль"
				ReturnCommand="{Binding NavigateBackCommand}"
				Text="{Binding ConfirmPassword}" />
			<Button Command="{Binding RegisterCommand}" Text="Зарегистрироваться" />
			<ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
			<Label
				HorizontalTextAlignment="Center"
				Text="{Binding ErrorMessage}"
				TextColor="Red" />
			<Button Command="{Binding NavigateBackCommand}" Text="Назад" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>