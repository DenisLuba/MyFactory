<ContentPage
	x:Class="MyFactory.MauiClient.Pages.Organization.Employees.EmployeesListPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Organization.Employees"
	Title="Сотрудники"
	x:DataType="view_model:EmployeesListPageViewModel">
	<ScrollView>
		<VerticalStackLayout Padding="16" Spacing="12">
			<Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
				<HorizontalStackLayout Spacing="8">
					<Label
						FontAttributes="Bold"
						FontSize="18"
						Text="Сотрудники"
						VerticalOptions="Center" />
					<Entry
						Placeholder="Поиск..."
						Text="{Binding SearchText}"
						WidthRequest="200" />
				</HorizontalStackLayout>
				<Button
					Grid.Column="1"
					Command="{Binding AddCommand}"
					Text="Добавить" />
			</Grid>

			<Grid
				Padding="0,4"
				ColumnDefinitions="*,Auto,Auto,Auto"
				ColumnSpacing="8">
				<Label FontAttributes="Bold" Text="ФИО" />
				<Label
					Grid.Column="1"
					FontAttributes="Bold"
					Text="Цех" />
				<Label
					Grid.Column="2"
					FontAttributes="Bold"
					Text="Должность" />
				<Label
					Grid.Column="3"
					FontAttributes="Bold"
					Text="Активен" />
			</Grid>

			<CollectionView
				x:Name="EmployeesCollection"
				ItemsSource="{Binding Employees}"
				SelectionMode="None">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<SwipeView>
							<SwipeView.RightItems>
								<SwipeItems Mode="Reveal">
									<SwipeItem
										BackgroundColor="LightGray"
										Command="{Binding BindingContext.EditCommand, Source={x:Reference Name=EmployeesCollection}}"
										CommandParameter="{Binding .}"
										Text="Редактировать" />
									<SwipeItem
										BackgroundColor="Tomato"
										Command="{Binding BindingContext.DeactivateCommand, Source={x:Reference Name=EmployeesCollection}}"
										CommandParameter="{Binding .}"
										Text="Деактивировать" />
								</SwipeItems>
							</SwipeView.RightItems>
							<Grid
								Padding="0,8"
								ColumnDefinitions="*,Auto,Auto,Auto"
								ColumnSpacing="8">
								<Grid.GestureRecognizers>
									<TapGestureRecognizer Command="{Binding BindingContext.OpenDetailsCommand, Source={x:Reference Name=EmployeesCollection}}" CommandParameter="{Binding .}" />
								</Grid.GestureRecognizers>
								<Label Text="{Binding FullName}" />
								<Label Grid.Column="1" Text="{Binding Department}" />
								<Label Grid.Column="2" Text="{Binding Position}" />
								<Label Grid.Column="3" Text="{Binding IsActive}" />
							</Grid>
						</SwipeView>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>

