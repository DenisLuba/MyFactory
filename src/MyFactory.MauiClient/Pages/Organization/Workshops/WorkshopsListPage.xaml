<ContentPage
	x:Class="MyFactory.MauiClient.Pages.Organization.Workshops.WorkshopsListPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:view_model="clr-namespace:MyFactory.MauiClient.ViewModels.Organization.Workshops"
	Title="Участки / Цеха"
	x:DataType="view_model:WorkshopsListPageViewModel">
	<ScrollView>
		<VerticalStackLayout Padding="16" Spacing="12">
			<Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
				<Label
					FontAttributes="Bold"
					FontSize="18"
					Text="Участки / Цеха" />
				<Button
					Grid.Column="1"
					Command="{Binding AddCommand}"
					Text="+ Добавить" />
			</Grid>

			<Grid
				Padding="0,4"
				ColumnDefinitions="Auto,*,Auto"
				ColumnSpacing="8">
				<Label FontAttributes="Bold" Text="Код" />
				<Label
					Grid.Column="1"
					FontAttributes="Bold"
					Text="Наименование" />
				<Label
					Grid.Column="2"
					FontAttributes="Bold"
					Text="Тип" />
			</Grid>

			<CollectionView
				x:Name="WorkshopsCollection"
				ItemsSource="{Binding Workshops}"
				SelectionMode="None">
				<CollectionView.ItemTemplate>
					<DataTemplate>
						<SwipeView>
							<SwipeView.RightItems>
								<SwipeItems Mode="Reveal">
									<SwipeItem
										BackgroundColor="LightGray"
										Command="{Binding BindingContext.EditCommand, Source={x:Reference Name=WorkshopsCollection}}"
										CommandParameter="{Binding .}"
										Text="Редактировать" />
									<SwipeItem
										BackgroundColor="Tomato"
										Command="{Binding BindingContext.DeactivateCommand, Source={x:Reference Name=WorkshopsCollection}}"
										CommandParameter="{Binding .}"
										Text="Деактивировать" />
								</SwipeItems>
							</SwipeView.RightItems>
							<Grid
								Padding="0,8"
								ColumnDefinitions="Auto,*,Auto"
								ColumnSpacing="8">
								<Grid.GestureRecognizers>
									<TapGestureRecognizer Command="{Binding BindingContext.OpenDetailsCommand, Source={x:Reference Name=WorkshopsCollection}}" CommandParameter="{Binding .}" />
								</Grid.GestureRecognizers>
								<Label Text="{Binding Code}" />
								<Label Grid.Column="1" Text="{Binding Name}" />
								<Label Grid.Column="2" Text="{Binding Type}" />
							</Grid>
						</SwipeView>
					</DataTemplate>
				</CollectionView.ItemTemplate>
			</CollectionView>
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
