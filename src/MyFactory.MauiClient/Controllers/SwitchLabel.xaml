<?xml version="1.0" encoding="utf-8" ?>
<ContentView
	x:Class="MyFactory.MauiClient.Controllers.SwitchLabel"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Name="Root">
	<Grid
		Padding="4"
		ColumnDefinitions="Auto,*"
		ColumnSpacing="8">
		<Label Text="{Binding Text, Source={x:Reference Root}}" VerticalTextAlignment="Center">
			<Label.GestureRecognizers>
				<TapGestureRecognizer Tapped="OnTapped" />
			</Label.GestureRecognizers>
		</Label>
		<Switch
			x:Name="Check"
			Grid.Column="1"
			IsToggled="{Binding IsToggled, Source={x:Reference Root}, Mode=TwoWay}" />
	</Grid>
</ContentView>
